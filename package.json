{
  "name": "chemung-politics-api",
  "version": "0.1.0",
  "description": "Local political information API for Chemung County, NY",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "db:migrate": "sequelize-cli db:migrate",
    "db:seed": "sequelize-cli db:seed:all",
    "db:setup": "sequelize-cli db:create && npm run db:migrate",
    "db:reset": "sequelize-cli db:drop && npm run db:setup && npm run db:seed",
    "docs:generate": "swagger-jsdoc -d swagger.config.js src/api/routes/*.js -o docs/api-spec.json",
    "build": "node scripts/build.js"
  },
  "keywords": [
    "politics",
    "election",
    "api",
    "local-government",
    "civic-data",
    "chemung-county",
    "new-york"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "helmet": "^6.0.1",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "pg": "^8.10.0",
    "sequelize": "^6.29.3",
    "redis": "^4.6.5",
    "joi": "^17.8.3",
    "bcrypt": "^5.1.0",
    "jsonwebtoken": "^9.0.0",
    "winston": "^3.8.2",
    "winston-daily-rotate-file": "^4.7.1",
    "dotenv": "^16.0.3",
    "axios": "^1.3.4",
    "cheerio": "^1.0.0-rc.12",
    "node-cron": "^3.0.2",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "nodemon": "^2.0.20",
    "jest": "^29.5.0",
    "supertest": "^6.3.3",
    "eslint": "^8.36.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.27.5",
    "prettier": "^2.8.7",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "sequelize-cli": "^6.6.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.2",
    "@types/jest": "^29.5.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MehKoiter/Chemung-County-API.git"
  },
  "bugs": {
    "url": "https://github.com/MehKoiter/Chemung-County-API/issues"
  },
  "homepage": "https://github.com/MehKoiter/Chemung-County-API#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js",
      "!src/config/*.js"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  }
}