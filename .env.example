# Environment Variables Template
# Copy this file to .env and fill in the appropriate values

# Server Configuration
NODE_ENV=development
PORT=3000
API_BASE_URL=http://localhost:3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=chemung_politics_dev
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_SSL=false

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Authentication
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=24h
API_KEY_SECRET=your_api_key_secret_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# External APIs
GOOGLE_CIVIC_API_KEY=your_google_civic_api_key
BALLOTPEDIA_API_KEY=your_ballotpedia_api_key
OPENSECRETS_API_KEY=your_opensecrets_api_key
PROPUBLICA_API_KEY=your_propublica_api_key

# Data Sources
CHEMUNG_COUNTY_BOE_URL=https://chemungcounty.com/elections
NY_STATE_BOE_URL=https://www.elections.ny.gov

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=logs/app.log

# Email Configuration (for notifications)
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_email_password

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=uploads/

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret_here

# Development Tools
SWAGGER_ENABLED=true
DEBUG_MODE=true